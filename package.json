{
  "name": "tracked-pixel-api",
  "version": "1.0.0",
  "description": "Tracked Pixel API",
  "repository": "https://github.com/trackedpixel/tracked-pixel-api",
  "author": "Brian McCarthy <brian.mcc@rthy.org>",
  "private": true,
  "license": "MIT",
  "main": "dist/index.js",
  "engines": {
    "node": "~6.9.1",
    "npm": ">=3.10.0"
  },
  "scripts": {
    "prestart": "npm run -s build",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.js --exec \"node -r dotenv/config -r babel-register\"",
    "clean": "rimraf dist",
    "build": "npm run clean && mkdir -p dist && babel src -s -D -d dist",
    "test": "jest --watch",
    "lint": "esw -w src test"
  },
  "dependencies": {
    "@types/mongodb": "^2.2.7",
    "babel-cli": "^6.18.0",
    "babel-preset-env": "^1.1.11",
    "body-parser": "^1.17.0",
    "cors": "^2.8.3",
    "debug": "^2.6.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.0",
    "express-jwt": "^5.3.0",
    "express-jwt-authz": "^1.0.0",
    "iplocation": "^5.0.0",
    "jwks-rsa": "^1.2.0",
    "mongodb": "^2.2.26",
    "morgan": "^1.7.0",
    "pusher": "^1.5.1",
    "response-time": "^2.3.2",
    "rimraf": "^2.6.1"
  },
  "devDependencies": {
    "babel-jest": "^19.0.0",
    "babel-register": "^6.18.0",
    "eslint": "^3.16.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^19.0.1",
    "eslint-watch": "^3.0.0",
    "jest": "^19.0.2",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "plugins": [
      "import",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "jest/no-focused-tests": 2,
      "jest/no-identical-title": 2
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
